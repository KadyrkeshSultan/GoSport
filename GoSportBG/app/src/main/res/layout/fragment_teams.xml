<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teams.TeamsFragment">

    <LinearLayout
        android:id="@+id/show_teams_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:drawableLeft="@android:drawable/ic_input_add"
            android:id="@+id/new_team_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Нов отбор"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:theme="@style/SuccessButton"
            android:textColor="#ffffff"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/teams_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_team_form"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:id="@+id/show_teams_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Покажи отбори"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:theme="@style/InfoButton"
            android:textColor="#ffffff"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/anonymous"
                    android:layout_gravity="center_horizontal"/>
                <Button
                    android:id="@+id/profile_image_button"
                    android:layout_width="220dp"
                    android:layout_height="60dp"
                    android:textColor="#ffffff"
                    android:text="Изберете профилна снимка"
                    android:theme="@style/InfoButton"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/name_txt"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:hint="Име"
                        android:fontFamily="sans-serif-condensed"/>
                </android.support.design.widget.TextInputLayout>
                <Spinner
                    android:id="@+id/sport_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
