<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teams.multiple_teams.TeamsFragment">

    <LinearLayout
        android:id="@+id/show_teams_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/mainColor">
        <Button
            android:drawableLeft="@android:drawable/ic_input_add"
            android:id="@+id/new_team_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Нов отбор"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:theme="@style/SuccessButton"
            android:textColor="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ProgressBar
                        android:id="@+id/event_list_progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/teams_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </ScrollView>
            <TextView
                android:id="@+id/result_count"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:text="Брой намерени събития: Изчислява се..."/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_team_form"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:id="@+id/show_teams_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Покажи отбори"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:theme="@style/InfoButton"
            android:textColor="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="65dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logo_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/default_team_avatar"
                        android:layout_gravity="center_horizontal"/>
                    <Button
                        android:id="@+id/profile_image_button"
                        android:layout_width="220dp"
                        android:layout_height="60dp"
                        android:textColor="#ffffff"
                        android:text="Лого на отбора"
                        android:theme="@style/InfoButton"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-condensed"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/name_txt"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:hint="Име"
                            android:fontFamily="sans-serif-condensed"/>
                    </android.support.design.widget.TextInputLayout>
                    <Spinner
                        android:id="@+id/sport_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </ScrollView>
            <Button
                android:drawableLeft="@android:drawable/ic_input_add"
                android:id="@+id/create_team_btn"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Създаване на отбор"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:theme="@style/SuccessButton"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/progressbar_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <ProgressBar
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Създаване на отбор..."/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
