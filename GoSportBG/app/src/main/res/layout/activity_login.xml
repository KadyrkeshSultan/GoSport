<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kamenov.martin.gosportbg.login.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sportsmedicine">
        <LinearLayout
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:text="Влизане"
                android:textColor="#5BB85D"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold|italic"
                android:fontFamily="sans-serif-condensed" />
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaffffff"
                android:orientation="vertical"
                android:layout_marginTop="60dp">
                <EditText
                    android:id="@+id/username_txt"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="потребителско име"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed"
                    android:theme="@style/SuccessButton"/>
                <EditText
                    android:id="@+id/password_txt"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="парола"
                    android:textAlignment="center"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif-condensed"
                    android:theme="@style/SuccessButton"/>
            </LinearLayout>
            <Button
                android:id="@+id/login_user"
                android:layout_marginTop="30dp"
                android:layout_width="500px"
                android:layout_gravity="center_horizontal"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:text="Влизане"
                android:textColor="#fff"
                android:fontFamily="sans-serif-condensed"
                android:theme="@style/SuccessButton"/>
            <Button
                android:id="@+id/show_register"
                android:layout_width="500px"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="Регистрация"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:theme="@style/DefaultButton"
                />
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="490px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:textSize="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                xmlns:facebook="http://schemas.android.com/apk/res-auto"
                facebook:com_facebook_login_text="Влизане през фейсбук"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_form"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:text="Регистрация"
                android:textColor="#5BC0DE"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"
                android:fontFamily="sans-serif-condensed" />
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaffffff"
                android:orientation="vertical"
                android:layout_marginTop="40dp">
                <EditText
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:hint="имейл"
                    android:id="@+id/email_txt"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:theme="@style/SuccessButton"
                    />
                <EditText
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="потребителско име"
                    android:id="@+id/username_txt1"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:theme="@style/SuccessButton"
                    />
                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="500px"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/password_txt1"
                    android:layout_marginTop="30dp"
                    android:layout_width="500px"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:hint="парола"
                    android:textAlignment="center"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif-condensed"
                    android:theme="@style/SuccessButton"/>
                <EditText
                    android:id="@+id/password_txt2"
                    android:layout_marginTop="30dp"
                    android:layout_width="500px"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:hint="повторна парола"
                    android:textAlignment="center"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif-condensed"
                    android:theme="@style/SuccessButton"/>
            </LinearLayout>
            <Button
                android:id="@+id/register_user"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="500px"
                android:layout_height="60dp"
                android:text="Регистриране"
                android:textColor="#fff"
                android:fontFamily="sans-serif-condensed"
                android:theme="@style/InfoButton"/>
            <Button
                android:id="@+id/show_login"
                android:layout_gravity="center_horizontal"
                android:layout_width="500px"
                android:layout_height="60dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Влизане"
                android:textColor="#ffffff"
                android:theme="@style/DefaultButton"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/progress_bar_form"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ProgressBar
                android:layout_width="200px"
                android:layout_height="200px"
                android:theme="@style/SuccessButton"/>
            <TextView
                android:id="@+id/progress_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="45px"
                android:fontFamily="sans-serif-condensed"
                android:text="Влизане..."/>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>