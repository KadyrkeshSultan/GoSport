<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kamenov.martin.gosportbg.messenger.MessengerFragment">
    <RelativeLayout
        android:id="@+id/messenger_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="115dp">
            <LinearLayout
                android:id="@+id/messages_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/message"
                    android:textColor="@color/secondColor"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Съобщение"
                    android:maxLines = "3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:scrollbars = "vertical"/>
            </android.support.design.widget.TextInputLayout>
            <!--<EditText
                android:textSize="20dp"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/Widget.AppCompat.EditText"
                android:background="@drawable/messageinputbackground"
                android:maxLines = "3"
                android:scrollbars = "vertical"
                android:id="@+id/message"
                android:hint="Текст..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:theme="@style/SuccessButton"/>-->
            <Button
                android:id="@+id/submit"
                android:theme="@style/SendButton"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="Изпращане"
                android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
