<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kamenov.martin.gosportbg.teams.single_team.TeamFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_container"
        android:background="@color/mainColor"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo_image"
                    android:src="@drawable/default_team_avatar"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:textColor="@color/secondColor"
                    android:layout_marginTop="10dp"
                    android:id="@+id/team_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Отбор"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold|italic"
                    android:textSize="35dp"/>
                <TextView
                    android:id="@+id/sport_txt"
                    android:textColor="@color/secondColor"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Спорт"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:id="@+id/requesting_players_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:id="@id/players_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/request_join_team_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:text="Заявка за присъединяване"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:theme="@style/SuccessButton"/>
        <Button
            android:id="@+id/open_chat_btn"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:text="Отваряне на чат"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:theme="@style/InfoButton"/>
        <Button
            android:id="@+id/remove_request_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:text="Оттегляне на заявката за присъединяване"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:theme="@style/DangerButton"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/progress_bar_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <ProgressBar
                android:layout_gravity="center_horizontal"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <TextView
                android:textColor="@color/secondColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зареждане на отбор"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
